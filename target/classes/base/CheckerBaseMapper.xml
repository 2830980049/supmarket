<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.Mapper.base.CheckerBaseMapper">
    <insert id="insert_goods_records">
        insert into goods_records
        (
        <trim suffixOverrides=",">
            <if test="goods_id != null and goods_id != ''">
                goods_id,
            </if>
            <if test="goods_second_id != null and goods_second_id != ''">
                goods_second_id,
            </if>
            <if test="trade_id != null and trade_id != ''">
                trade_id,
            </if>
            <if test="trade_name != null and trade_name != ''">
                trade_name,
            </if>
            <if test="trade_type != null and trade_type != ''">
                trade_type,
            </if>
            discount_type,
            trade_number,
        </trim>
        )
        values (
        <trim suffixOverrides=",">
            <if test="goods_id != null and goods_id != ''">
                #{goods_id},
            </if>
            <if test="goods_second_id != null and goods_second_id != ''">
                #{goods_second_id},
            </if>
            <if test="trade_id != null and trade_id != ''">
                #{trade_id},
            </if>
            <if test="trade_name != null and trade_name != ''">
                #{trade_name},
            </if>
            <if test="trade_type != null and trade_type != ''">
                #{trade_type},
            </if>
            #{discount_type},
            #{trade_number},
        </trim>
        )
    </insert>

    <delete id="delete_goods_records">
        delete from goods_records where goods_second_id=#{goods_second_id}
    </delete>

    <resultMap type="com.edu.Pojo.Checker" id="Checker">
        <result property="checker_account" column="checker_account"></result>
        <result property="checker_name" column="checker_name"></result>
        <result property="checker_password" column="checker_password"></result>
        <result property="checker_sex" column="checker_sex"></result>
        <result property="checker_birthday" column="checker_birthday"></result>
        <result property="checker_phone" column="checker_phone"></result>
        <result property="position" column="position"></result>
    </resultMap>

    <select id="queryChecker" resultMap="Checker">
        select * from user
        <where>
            <if test="checker_account!=null and checker_account!=''">
                and checker_account=#{checker_account}
            </if>
            <if test="checker_name!=null and checker_name!=''">
                and checker_name=#{checker_name}
            </if>
            <if test="checker_password!=null and checker_password!=''">
                and checker_password=#{checker_password}
            </if>
            <if test="checker_sex!=null and checker_sex!=''">
                and checker_sex=#{checker_sex}
            </if>
            <if test="checker_birthday!=null">
                and checker_birthday=#{checker_birthday}
            </if>
            <if test="checker_phone!=null">
                and checker_phone=#{checker_phone}
            </if>
            <if test="position!=null and position!=''">
                and position=#{position}
            </if>
        </where>
    </select>

</mapper>